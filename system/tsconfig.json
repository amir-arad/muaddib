{
  "compilerOptions": {
    "lib": [
      "es2015", "es2016", "es2017", "dom"
    ],
    "module": "commonjs",
    "target": "es5",
    "strict": true,
    "importHelpers": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": "dist",
    "typeRoots": [
      "../node_modules/@types",
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
