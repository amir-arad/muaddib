{
  "name": "muadib-app",
  "version": "0.0.1",
  "description": "Generic application boilerplate for Muadib",
  "author": "Amir Arad (amira@wix.com)",
  "license": "MIT",
  "files": [
    "dist/src"
  ],
  "testGlob": "./dist/test/**/*.spec.js?(x)",
  "keywords": [
    "typescript",
    "tdd"
  ],
  "main": "dist/src/index.js",
  "browser": "dist/src/index.js",
  "scripts": {
    "build": "tsc -d",
    "bundle": "webpack --progress",
    "reset": "rimraf node_modules dist && yarn install && yarn test",
    "test": "run-s test:node test:browser:run",
    "test:node": "mocha --require ts-node/register --require test/setup.ts --require source-map-support/register test/*.spec.ts",
    "test:browser:run": "run-p -r start test:browser:run2",
    "test:browser:run2": "run-s start:wait test:browser",
    "test:browser": "cross-var mocha-headless-chrome $HL_CHROME_PARAMS -t 30000 -f http://localhost:8080/test.bundle",
    "main": "node -r 'ts-node/register' src/main.ts",
    "start": "tsc-watch --onFirstSuccess \"webpack-dev-server --no-info\"",
    "start:wait": "wait-on -t 30000 http://localhost:8080/test.bundle"
  },
  "devDependencies": {
    "@types/chai": "~4.1.2",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "~5.2.0",
    "@types/sinon": "~4.3.0",
    "@types/sinon-chai": "~2.7.28",
    "chai": "~4.1.0",
    "chai-as-promised": "^7.1.1",
    "cross-var": "^1.1.0",
    "glob": "~7.1.2",
    "mocha": "~5.1.0",
    "mocha-env-reporter": "~3.0.0",
    "mocha-headless-chrome": "^2.0.0",
    "mocha-loader": "~1.1.1",
    "npm-run-all": "^4.1.2",
    "rimraf": "~2.6.1",
    "sinon": "~5.0.0",
    "sinon-chai": "~3.0.0",
    "source-map-support": "~0.5.0",
    "tsc-watch-2": "^0.0.1",
    "tslib": "~1.9.0",
    "wait-on": "^2.1.0",
    "webpack": "~4.6.0",
    "webpack-cli": "^2.0.11",
    "webpack-dev-server": "~3.1.1"
  },
  "peerDependencies": {
    "tslib": "~1.7.1"
  },
  "dependencies": {
    "inversify": "^4.13.0",
    "reflect-metadata": "^0.1.12",
		"inversify-devtools": "^1.0.0"
  }
}
