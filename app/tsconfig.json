{
  "compilerOptions": {
    "lib": [
      "es2017"
    ],
    "module": "commonjs",
    "target": "es5",
    "strict": true,
    "strictPropertyInitialization": false, // allow injected properties
    "importHelpers": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": "dist",
    "experimentalDecorators": true, // inversify API
   // "emitDecoratorMetadata": true // inversify features
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
